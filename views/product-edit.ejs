<%- include('partials/header') %>
    <main class="container my-5">
        <h1 class="text-center mb-4">Edit Product</h1>
        <form action="/products/edit/<%= product._id %>" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Product Name:</label>
                <input type="text" id="name" name="name" class="form-control" value="<%= product.name %>" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea id="description" name="description" class="form-control" required><%= product.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price:</label>
                <input type="number" id="price" name="price" class="form-control" value="<%= product.price %>" required>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category:</label>
                <select id="category" name="category" class="form-control" required>
                    <option value="Electronics" <%= product.category === 'Electronics' ? 'selected' : '' %>>Electronics</option>
                    <option value="Appliances" <%= product.category === 'Appliances' ? 'selected' : '' %>>Appliances</option>
                    <option value="Computers" <%= product.category === 'Computers' ? 'selected' : '' %>>Computers</option>
                    <option value="Mobile Phones" <%= product.category === 'Mobile Phones' ? 'selected' : '' %>>Mobile Phones</option>
                    <option value="Other" <%= product.category === 'Other' ? 'selected' : '' %>>Other</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Update Product</button>
        </form>
    </main>
<%- include('partials/footer') %>